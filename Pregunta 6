//Calcular la siguiente serie usando la expresi√≥n de Horner
#include "stdafx.h"
#include <iostream>
#include <conio.h>
#include <Math.h>
using namespace std;
void main() {
	double i,b;
	int s,n;
	cout << "Ingrese la base de la serie: ";
	cin >> b;
	cout << "Ingrese un exponente entero positivo: " ;
	cin>>n;
	s=0;
	for(i=1;i<=n;i++){
		s=s+ pow(b,i);
	}
	cout<<"La serie de Horner hasta el " << n << " seria: " << s;
	getch();}

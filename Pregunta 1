//Suma de los n√∫meros enteros entre 1 y N.
#include "stdafx.h"
#include <iostream>
#include <conio.h>
using namespace std;
void main() {
	int i,s,n;
	cout << "Ingrese un numero entero positivo: " ;
	cin>>n;
	s=0;
	for(i=1;i<=n;i++)
		s=s+i;
	cout<<"La suma de los numeros del 1 al " << n << " es: " <<s;
	getch();}

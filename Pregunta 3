//Suma de los cuadrados de los primeros N n√∫meros enteros.
#include "stdafx.h"
#include <iostream>
#include <conio.h>
using namespace std;
void main() {
	int i,s,n;
	cout << "Ingrese un numero entero positivo: " ;
	cin>>n;
	s=0;
	for(i=1;i<=n;i++)
		s=s+(i*i);
	cout<<"La suma de los cuadrados de los primeros " << n << " numeros es: " <<s;
	getch();}
